<!DOCTYPE html>
<html>
<head>
  <title>Bldapp1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
 
<script id="webplate-stack" src="stack.js"></script>

</head>
<body>

<nav class="navigation" style="text-align:center;">
	<div class="container-fluid">
		<div class="nagivation">
			<h3><%= link_to root_path do %>Bld<% end %></h3>
		</div>

		<div class="navigation">

			<ul class="navigation">
				<% if current_user %>
					<li>Signed in as: <%= current_user.name %> - <%= image_tag(@auth['info'] ['image'], width: '50', heigth: '50', class: 'img-circle') %></li>
					<li><%= link_to "Sign Out", 'sign_out', method: :delete %></li>
				<% else %>
					<li><%= link_to "auth/facebook" do %><%= image_tag('facebook.png', width: '40', heigth: '40', class: 'img-circle') %><% end %></li>
					<li><%= link_to "auth/twitter" do %><%= image_tag('twitter.png', width: '40', heigth: '40', class: 'img-circle') %><% end %></li>
					<li><%= link_to "auth/linkedin" do %><%= image_tag('linkedin.png', width: '40', heigth: '40', class: 'img-circle') %><% end %></li>
				<% end %>
			</ul>
		</div>
	</div>
</nav>

<% flash.each do |key, value| %>
	<div class="alert alert-info"><%= value %></div>
<% end %>

<% if current_user %>
	<div class="text-center">
		<h1>Welcome, <%= current_user.name %></h1>
		<h4>Logged In with -> <strong><en><%= @auth['provider'].capitalize %></en></strong></h4>
		<%= image_tag('logo.png') %>
	</div>
<% end %>


<%= yield %>

<script type="text/javascript" src="https://open.tilt.com/checkout-1-2-2.js"></script>
</body>
</html>
